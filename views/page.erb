            <li class="dropdown hidden-xs">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= @title %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% @menu.each do |(url, name)| %>
                  <li><a href="<%= url %>"><%= name %></a></li>
                <% end %>
              </ul>
            </li>
            <% @menu.each do |(url, name)| %>
              <li class="hidden-lg hidden-md hidden-sm"><a href="<%= url %>"><%= name.sub(/^.+\.\s+/, '') %></a></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if request.path_info.start_with?('/en-ruby') %>
              <li class="hidden-xs"><a href="#" style="cursor: default"><b>eng</b></a></li>
              <li class="hidden-xs"><a href="<%= request.path_info.sub(/^\/[^\/]+/, '/uk-ruby') %>">ukr</a></li>
              <li class="hidden-xs"><a href="<%= request.path_info.sub(/^\/[^\/]+/, '/ru-ruby') %>">rus</a></li>
