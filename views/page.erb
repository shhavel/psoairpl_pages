              <li class="hidden-xs"><a href="<%= request.path_info.sub(/^\/[^\/]+/, '/en-ruby') %>">eng</a></li>
              <li class="hidden-xs"><a href="#" style="cursor: default"><b>ukr</b></a></li>
              <li class="hidden-xs"><a href="<%= request.path_info.sub(/^\/[^\/]+/, '/ru-ruby') %>">rus</a></li>
            <% else %>
              <li class="hidden-xs"><a href="<%= request.path_info.sub(/^\/[^\/]+/, '/en-ruby') %>">eng</a></li>
              <li class="hidden-xs"><a href="<%= request.path_info.sub(/^\/[^\/]+/, '/uk-ruby') %>">ukr</a></li>
              <li class="hidden-xs"><a href="#" style="cursor: default"><b>rus</b></a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
